{
    "workbench.colorTheme": "Ayu Mirage Bordered",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "constant.language.boolean.false.ts",
                "settings": {
                    "foreground": "#FFCC66"
                }
            },
            {
                "scope": "constant.language.boolean.true.ts",
                "settings": {
                    "foreground": "#FFCC66"
                }
            },
            {
                "scope": "constant.numeric.decimal.ts",
                "settings": {
                    "foreground": "#FFCC66"
                }
            },
            {
                "scope": "constant.language.json.comments",
                "settings": {
                    "foreground": "#FFCC66"
                }
            }
        ]
    },
    "editor.formatOnSave": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.preferences.quoteStyle": "double",
    "typescript.preferences.quoteStyle": "double",
    "html.format.wrapAttributes": "force-aligned",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "redhat.telemetry.enabled": false,
    "emmet.excludeLanguages": ["typescriptreact"],
    "remote.SSH.connectTimeout": 30,
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer"
    },
    "editor.renderWhitespace": "all",
    "rust-analyzer.completion.callable.snippets": "none",
    "explorer.confirmDragAndDrop": false,
    "workbench.iconTheme": "material-icon-theme",
    "[python]": {
        "editor.formatOnType": true
    },
    "lldb.library": "/Applications/Xcode.app/Contents/SharedFrameworks/LLDB.framework/Versions/A/LLDB",
    "lldb.launch.expressions": "native",
    "[swift]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vknabel.vscode-swiftformat"
    },
    "lldb.suppressUpdateNotifications": true,
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "typescript.inlayHints.variableTypes.enabled": true,
    "javascript.inlayHints.variableTypes.enabled": true,
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "prettier.tabWidth": 4,
    "prettier.singleQuote": true,
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "window.zoomLevel": -1,
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "window.confirmBeforeClose": "keyboardOnly"
    // "editor.wordWrap": "bounded"
    // "editor.wordWrapColumn": 80
}
